@model IEnumerable<Book>;


<div class="col-lg-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Danh sách</h4>
     
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Hình Ảnh</th>
              <th>Tiêu Đề</th>
              <th>Tác Giả</th>
              <th>Thể Loại</th>
              <th>Số Lượng</th>
              <th>Tình Trạng</th>
              <th>Thao tác</th>
            </tr>
          </thead>
          <tbody>
              @foreach (var item in Model)
              {
                <tr>
                  <td class="py-1">
                   <img src="@item.image" style="border-radius: 0;"/>
                  </td>
                  <td class="py-1">
                   @item.title
                  </td>
                  <td>@item.author</td>
                  <td>
                    @item.category.name
                  </td>
                  <td>@item.quantity</td>
                  <td>@item.status</td>
                   <td>
                      <form method="post" asp-action="delete" asp-route-id="@item.id">
                          <a asp-action="edit" asp-route-id="@item.id" type="button"  class="btn btn-success btn-sm">edit</a>
                          <button type="submit"  class="btn btn-danger btn-sm">delete</button>
                      </form>
                  </td>
                </tr>
              }
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
