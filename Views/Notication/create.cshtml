@model Notication;
@{
  
}

<div class="col-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Tạo Thông Báo</h4>
      <p class="card-description">Hãy điền vào ý kiến của bạn</p>
      <form class="forms-sample" method="post" asp-action="create">
        <div class="form-group">
          <label >Email Người Nhận</label>
          <input
            class="form-control"
            name="receiver"
          />
        </div>
        <div class="form-group">
          <label asp-for="@Model.text">Nội Dung</label>
          <input
            class="form-control"
            asp-for="@Model.text"
          />
        </div>
        <div class="form-group">
          <label for="exampleSelectGender">Kiểu</label>
          <select class="form-control" name="typeMessage" id="exampleSelectGender">
               <option value="0">Tin nhắn</option>
               <option value="1">Thông báo</option>
          </select>
        </div>
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <button class="btn btn-light">Cancel</button>
      </form>
    </div>
  </div>
</div>
