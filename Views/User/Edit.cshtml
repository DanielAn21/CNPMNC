@model User;
@{
    var categories = ViewBag.categories as List<Category>;
}
<div class="col-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">edit  User</h4>
      <p class="card-description">please enter all form</p>
      <form class="forms-sample" method="post" asp-action="edit">
         <div class="form-group">
          <label asp-for="@Model.id"></label>
          <input
            class="form-control"
            asp-for="@Model.id"
            readonly
          />
        </div>
        <div class="form-group">
          <label asp-for="@Model.email"></label>
          <input
            class="form-control"
            asp-for="@Model.email"
          />
        </div>
         <div class="form-group">
          <label for="exampleSelectGender">Sex</label>
          <select class="form-control" name="sex" id="exampleSelectGender">
               <option value="0">Male</option>
               <option value="1">Fe-Male</option>
          </select>
        </div>
        <div class="form-group">
          <label asp-for="@Model.hashPassword">Password</label>
          <input
            class="form-control"
            asp-for="@Model.hashPassword"
            value=""
          />
        </div>
        <div class="form-group">
          <label asp-for="@Model.birthDate"></label>
          <input
            class="form-control"
            asp-for="@Model.birthDate"
          />
        </div>
        <div class="form-group">
          <label asp-for="@Model.phone"></label>
          <input
            class="form-control"
            asp-for="@Model.phone"
          />
        </div>
         <div class="form-group">
          <label asp-for="@Model.address"></label>
          <input
            class="form-control"
            asp-for="@Model.address"
          />
        </div>

        <div class="form-group">
          <label for="exampleSelectGender">role</label>
          <select class="form-control" name="sex" id="exampleSelectGender">
               <option value="1">admin</option>
               <option value="2">reader</option>
          </select>
        </div>
     
       
       
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <button class="btn btn-light">Cancel</button>
      </form>
    </div>
  </div>
</div>
