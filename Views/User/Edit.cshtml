@model User;
@{
    var categories = ViewBag.categories as List<Category>;
}
<div class="col-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Chỉnh sửa thông tin</h4>
      
      <form class="forms-sample" method="post" asp-action="edit">
         <div class="form-group">
          <label asp-for="@Model.id"></label>
          <input
            class="form-control"
            asp-for="@Model.id"
            readonly
          />
        </div>
        <div class="form-group">
          <label asp-for="@Model.email">Email</label>
          <input
            class="form-control"
            asp-for="@Model.email"
          />
        </div>
         <div class="form-group">
          <label for="exampleSelectGender">Giới tính</label>
          <select class="form-control" name="sex" id="exampleSelectGender">
               <option value="0">Nam</option>
               <option value="1">Nữ</option>
          </select>
        </div>
        <div class="form-group">
          <label asp-for="@Model.hashPassword">Mật khẩu</label>
          <input
            class="form-control"
            asp-for="@Model.hashPassword"
            value=""
          />
        </div>
        <div class="form-group">
          <label asp-for="@Model.birthDate">Ngày sinh</label>
          <input
            class="form-control"
            asp-for="@Model.birthDate"
          />
        </div>
        <div class="form-group">
          <label asp-for="@Model.phone">Số điện thoại</label>
          <input
            class="form-control"
            asp-for="@Model.phone"
          />
        </div>
         <div class="form-group">
          <label asp-for="@Model.address">Địa chỉ</label>
          <input
            class="form-control"
            asp-for="@Model.address"
          />
        </div>

        <div class="form-group">
          <label for="exampleSelectGender">Quyền</label>
          <select class="form-control" name="role" id="exampleSelectGender">
               <option value="1">Admin</option>
               <option value="2">Độc giả</option>
          </select>
        </div>
     
       
       
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <button class="btn btn-light">Cancel</button>
      </form>
    </div>
  </div>
</div>
