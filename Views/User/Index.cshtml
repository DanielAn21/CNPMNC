@model IEnumerable<User>;


  
<div class="col-lg-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
        <form action="/user" class="mr-lg-2 mb-3">
          <li class=" d-lg-block">
            <div class="input-group">
              <div class="input-group-prepend hover-cursor" id="navbar-search-icon">
                <span class="input-group-text" id="search">
                  <i class="icon-search"></i>
                </span>
              </div>
              <input name="search" type="text" class="form-control" id="navbar-search-input" placeholder="Nhap email" aria-label="search" aria-describedby="search">
            </div>
          </li>
        </form>
      <h4 class="card-title">Danh Sách Người dùng </h4>
     
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>email</th>
              <th>Giới tính</th>
              <th>Số điện thoại</th>
              <th>Quyền</th>
              <th>Thao tác</th>
            </tr>
          </thead>
          <tbody>
              @foreach (var item in Model)
              {
                <tr>
                  <td class="py-1">
                   @item.email
                  </td>
                  <td>
                    @if(item.sex == 0){
                      <label class="badge badge-info">Nam</label>
                    }else {
                      <label class="badge badge-success">Nữ</label>

                    }
                  </td>
                  <td>
                    @item.phone
                  </td>
                  <td>@item.role</td>
                   <td>
                      <form method="post" asp-action="delete" asp-route-id="@item.id">
                          <a asp-action="edit" asp-route-id="@item.id" type="button"  class="btn btn-success btn-sm">edit</a>
                          <button type="submit"  class="btn btn-danger btn-sm">delete</button>
                      </form>
                  </td>
                </tr>
              }
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
